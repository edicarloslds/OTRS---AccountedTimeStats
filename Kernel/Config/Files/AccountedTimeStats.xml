<?xml version="1.0" encoding="UTF-8" ?>
<otrs_config version="1.0" init="Application">
    <ConfigItem Name="Frontend::Module###AgentAccountedTimeStats" Required="1" Valid="1">
        <Description Translatable="1">FrontendModuleRegistration for AccountedTimeStats module.</Description>
        <Group>AccountedTimeStats</Group>
        <SubGroup>Frontend::Agent::ModuleRegistration</SubGroup>
        <Setting>
            <FrontendModuleReg>
                <Title Translatable="1">Accounted Time Stats</Title>
                <Group>stats</Group>
                <GroupRo>stats</GroupRo>
                <Description Translatable="1"></Description>
                <NavBarName>Reports</NavBarName>
                <NavBar>
                    <Name Translatable="1">AccountedTime</Name>
                    <Link>Action=AgentAccountedTimeStats;Subaction=Overview</Link>
					<NavBar>Reports</NavBar>
					<Prio>300</Prio>
                    <LinkOption></LinkOption>                    
                    <Type></Type>
                    <Description Translatable="1"></Description>                    
                    <Block></Block>
                    <AccessKey></AccessKey>
                </NavBar>
				<Loader>
                    <CSS>Core.Agent.AccountedTimeStats.css</CSS>
				</Loader>	
            </FrontendModuleReg>
        </Setting>
    </ConfigItem>
	
	<ConfigItem Name="AccountedTimeFormat" Required="1" Valid="1">
        <Description Translatable="1">Define the output format to accounted time.</Description>
        <Group>AccountedTimeStats</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <Option SelectedID="Hours">
                <Item Key="Hours" Translatable="1">Hours</Item>
                <Item Key="Minutes" Translatable="1">Minutes</Item>
            </Option>
        </Setting>
    </ConfigItem>
	
	<ConfigItem Name="PreferencesGroups###AccountedTimeOverviewPageShown" Required="0" Valid="1">
        <Description Translatable="1">Parameters for the pages (in which the Accounted Time are shown) of the Accounted Time overview.</Description>
        <Group>AccountedTimeStats</Group>
        <SubGroup>Frontend::Agent::Preferences</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Module">Kernel::Output::HTML::Preferences::Generic</Item>
                <Item Key="Column">Other Settings</Item>
                <Item Key="Label" Translatable="1">Accounted Time Overview Limit</Item>
                <Item Key="Key" Translatable="1">Accounted Time limit per page for Dynamic Fields Overview</Item>
                <Item Key="Data">
                    <Hash>
                        <Item Key="10">10</Item>
                        <Item Key="15">15</Item>
                        <Item Key="20">20</Item>
                        <Item Key="25">25</Item>
                        <Item Key="30">30</Item>
                        <Item Key="35">35</Item>
                    </Hash>
                </Item>
                <Item Key="DataSelected">25</Item>
                <Item Key="PrefKey">AccountedTimeOverviewPageShown</Item>
                <Item Key="Prio">9000</Item>
                <Item Key="Active">0</Item>
            </Hash>
        </Setting>
    </ConfigItem>
	
	<ConfigItem Name="AccountedTimeStats::TicketsView::DefaultOverviewColumns" Required="1" Valid="1">
        <Description Translatable="1">General ticket data shown in the ticket overviews (fall-back). Possible settings: 0 = Disabled, 1 = Available.</Description>
        <Group>AccountedTimeStats</Group>
        <SubGroup>Core</SubGroup>
        <Setting>
            <Hash>
                <Item Key="Age">1</Item>
                <Item Key="Changed">0</Item>
                <Item Key="CustomerID">1</Item>
                <Item Key="CustomerName">0</Item>
                <Item Key="CustomerUserID">0</Item>
                <Item Key="EscalationResponseTime">0</Item>
                <Item Key="EscalationSolutionTime">0</Item>
                <Item Key="EscalationTime">0</Item>
                <Item Key="EscalationUpdateTime">0</Item>
                <Item Key="TicketNumber">1</Item>
                <Item Key="Lock">1</Item>
                <Item Key="Owner">1</Item>
                <Item Key="PendingTime">0</Item>
                <Item Key="Queue">1</Item>
                <Item Key="Responsible">0</Item>
                <Item Key="Priority">0</Item>
                <Item Key="Service">0</Item>
                <Item Key="State">1</Item>
                <Item Key="SLA">0</Item>
                <Item Key="Title">1</Item>
                <Item Key="Type">0</Item>
            </Hash>
        </Setting>
    </ConfigItem>
	
</otrs_config>